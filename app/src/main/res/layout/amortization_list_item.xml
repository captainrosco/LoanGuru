<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/monthNumText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="$492.61"
            android:id="@+id/monthlyPaid"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/monthNumText"
            android:layout_toEndOf="@+id/monthNumText"
            android:layout_weight="2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="395.95"
            android:id="@+id/princplePaid"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/monthlyPaid"
            android:layout_toEndOf="@+id/monthlyPaid"
            android:layout_weight="2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="100.25"
            android:id="@+id/interestPaid"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/monthlyPaid"
            android:layout_toEndOf="@+id/monthlyPaid"
            android:layout_weight="2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="10,000.00"
            android:id="@+id/unpaidText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/monthlyPaid"
            android:layout_toEndOf="@+id/monthlyPaid"
            android:layout_weight="2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/primary_text_light" />
    </LinearLayout>

</LinearLayout>